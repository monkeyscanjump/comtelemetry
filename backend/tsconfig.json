{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@config/*": ["../shared/config/*"],
      "@types/*": [
        "../shared/types/*"
      ]
    },
    "moduleResolution": "node",
    "composite": true
  },
  "include": ["src/**/*", "../shared/utils/debounce.ts"],
  "exclude": ["node_modules"],
  "references": [
    {
      "path": "../shared"
    }
  ]
}